<%= simple_form_for(@document) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :control, label: "Control ID:", input_html: {value: f.object.control || "[OVPD" + DateTime.now.strftime("%Y]") + "-" + SecureRandom.hex } %>
    <%= f.input :office, label: "Originating/Receiving Office:", collection: Office.all, label_method: :name, include_blank: false %>
    <%= f.input :date, label: "Date Received/Sent:", :as => :date_picker, :placeholder => "DD/MM/YYYY" %>
    <%= f.input :received_by, label: "Received By:" %>
    <%= f.input :subject, label: "Subject:" %>
    <%= f.input :outgoing, label: "Status", collection: [[false, "Ingoing"], [true, "Outgoing"]], label_method: :last, value_method: :first, as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success pull-right" %>
  </div>
<% end %>
