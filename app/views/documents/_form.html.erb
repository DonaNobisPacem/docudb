<%= simple_form_for(@document) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :control %>
    <%= f.input :office %>
    <%= f.input :date %>
    <%= f.input :received_by %>
    <%= f.input :subject %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
